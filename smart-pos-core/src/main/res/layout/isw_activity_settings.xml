<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/iswColorPrimary"
        android:theme="@style/ISW.AppBarOverlay"
        app:popupTheme="@style/ISW.PopupOverlay" />

    <EditText
        android:id="@+id/terminalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="8"
        android:hint="@string/isw_title_terminal_id"
        android:layout_margin="15dp"
        tools:text="210239CB"
        android:textSize="22sp"
        android:inputType="textCapCharacters" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvKeys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/isw_content_padding"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/isw_title_download_keys"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDownloadKeys"
            />

        <TextView
            android:id="@+id/tvKeyDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingRight="@dimen/isw_content_padding"
            android:paddingEnd="@dimen/isw_content_padding"
            android:paddingLeft="@dimen/isw_content_padding"
            android:paddingStart="@dimen/isw_content_padding"
            app:layout_constraintBottom_toBottomOf="@+id/tvKeys"
            tools:text="Mon 23, 2018" />

        <ImageView
            android:id="@+id/btnDownloadKeys"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_download"
            android:tint="@color/iswColorPrimaryDark"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ProgressBar
            android:id="@+id/progressKeyDownload"
            style="@style/ISW.Progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/isw_content_padding"
            android:layout_marginEnd="@dimen/isw_content_padding"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/iswColorSecondaryIcon" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTerminalInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/isw_content_padding"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/isw_title_download_terminal_configuration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDownloadTerminalConfig"
            />

        <TextView
            android:id="@+id/tvTerminalInfoDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingRight="@dimen/isw_content_padding"
            android:paddingEnd="@dimen/isw_content_padding"
            android:paddingLeft="@dimen/isw_content_padding"
            android:paddingStart="@dimen/isw_content_padding"
            app:layout_constraintBottom_toBottomOf="@+id/tvTerminalInfo"
            tools:text="Mon 23, 2018" />

        <ImageView
            android:id="@+id/btnDownloadTerminalConfig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_download"
            android:tint="@color/iswColorPrimaryDark"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ProgressBar
            android:id="@+id/progressTerminalDownload"
            style="@style/ISW.Progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateOnly="true"
            android:layout_marginStart="@dimen/isw_content_padding"
            android:layout_marginEnd="@dimen/isw_content_padding"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/iswColorSecondaryIcon" />

</LinearLayout>