<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/state_expanded"
    android:drawable="@drawable/ic_expanded"
    android:state_checked="true" />

  <item
    android:id="@+id/state_collapsed"
    android:drawable="@drawable/ic_collapsed"
    android:state_checked="false" />

  <transition
    android:fromId="@id/state_collapsed"
    android:toId="@id/state_expanded"
    android:drawable="@drawable/avd_expand"
    android:reversible="false" />

  <transition
    android:fromId="@id/state_expanded"
    android:toId="@id/state_collapsed"
    android:drawable="@drawable/avd_collapse"
    android:reversible="false" />

</animated-selector>
