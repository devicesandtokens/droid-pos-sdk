<resources>


    <style name="ISW" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/iswColorMainBackground</item>
        <item name="colorPrimary">@color/iswColorPrimary</item>
        <item name="colorPrimaryDark">@color/iswColorPrimaryDark</item>
    </style>

    <style name="ISW.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ISW.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ISW.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ISW.PaymentContent">
        <item name="android:layout_marginRight">@dimen/content_margin</item>
        <item name="android:layout_marginLeft">@dimen/content_margin</item>
        <item name="android:padding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ISW.PaymentOption" parent="ISW.PaymentContent">
        <item name="android:background">@drawable/bg_card_shadow</item>
        <item name="android:layout_marginTop">@dimen/content_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/content_small_margin</item>
        <item name="android:padding">@dimen/content_padding</item>
    </style>

    <style name="ISW.PaymentText" parent="ISW.PaymentContent">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/iswColorTextSecondary</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>


    <style name="ISW.QrCode">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
    </style>

    <style name="ISW.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="ISW.Subtitle">
        <item name="android:paddingRight">@dimen/content_small_padding</item>
        <item name="android:paddingTop">@dimen/content_small_padding</item>
        <item name="android:paddingBottom">@dimen/content_small_padding</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
    </style>

    <style name="ISW.Spinner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner_drop_down</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ISW.SecondaryText">
        <item name="android:textColor">@color/iswColorTextSecondary</item>
    </style>

    <style name="ISW.Hint" parent="ISW.SecondaryText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.11</item>
        <item name="android:paddingTop">@dimen/content_small_padding</item>
        <item name="android:paddingBottom">@dimen/content_small_padding</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


        <style name="ISW.Ussd" parent="ISW.SecondaryText">
            <item name="android:fontFamily">@font/roboto_bold</item>
            <item name="android:layout_marginTop">@dimen/content_small_margin</item>
            <item name="android:textSize">32sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:lineSpacingMultiplier">1.19</item>
        </style>


    <public />
</resources>
