<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/isw_powered_by"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/isw_powered_by"
        android:textSize="10sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/isw_logo_png"
        app:layout_constraintTop_toBottomOf="@+id/isw_powered_by"
        app:layout_constraintStart_toStartOf="@+id/isw_powered_by"
        app:layout_constraintEnd_toEndOf="@+id/isw_powered_by"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>