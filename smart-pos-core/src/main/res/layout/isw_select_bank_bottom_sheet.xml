<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/headerLabelLayout">

        <ImageView
            android:id="@+id/closeSheetButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_close"
            android:layout_gravity="center_vertical|end|right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/iswTextColorSecondaryLight"
            android:text="Select Customer's preferred bank"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/headerLabelDivider"
        android:layout_below="@+id/headerLabelLayout"
        android:background="@color/iswColorHighlight"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/headerLabelDivider"
        android:layout_gravity="center_horizontal"
        android:id="@+id/progressBarSelectBank"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvBankLists"
        android:layout_above="@+id/proceedSelectBank"
        android:layout_below="@+id/headerLabelDivider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/proceedSelectBank"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_square_">

        <TextView
            android:layout_width="wrap_content"
            android:text="Proceed"
            android:textColor="@color/iswTextColorSecondaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_arrow_next"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>