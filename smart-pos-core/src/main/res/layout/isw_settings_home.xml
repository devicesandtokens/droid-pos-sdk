<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/iswColorTopBackground"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/isw_settings_toolbar_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:text="@string/isw_smartpos"
        android:textColor="@color/alert_default_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isw_activity_customer_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:textColor="@color/alert_default_text_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isw_settings_toolbar_label"
        android:text="@string/isw_settings" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/isw_bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isw_activity_customer_name_text"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/isw_settings_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/isw_settings_rectangle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/isw_account_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/isw_guideline2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/isw_account_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/isw_ic_account" />

            <TextView
                android:id="@+id/isw_account_label_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/isw_account_icon"
                app:layout_constraintTop_toBottomOf="@+id/isw_account_label"
                android:text="@string/isw_account_sub_text" />

            <TextView
                android:id="@+id/isw_account_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="#0D0E11"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/isw_account_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/isw_account" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/isw_account_container"
            app:layout_constraintLeft_toLeftOf="@id/isw_guideline2"
            android:layout_marginTop="24dp"
            android:id="@+id/isw_customization_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/isw_customization_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/isw_ic_account" />


            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/isw_customization_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0D0E11"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/isw_customization_icon"
                android:text="@string/isw_customization" />

            <TextView
                android:id="@+id/isw_customization_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/isw_customization_icon"
                app:layout_constraintTop_toBottomOf="@+id/isw_customization_label"
                android:text="@string/isw_customization_sub_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>






        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/isw_help_container"
            app:layout_constraintTop_toBottomOf="@id/isw_customization_container"
            app:layout_constraintLeft_toLeftOf="@id/isw_guideline2"
            android:layout_width="0dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content">

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/isw_help_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/isw_ic_account" />

            <TextView
                android:id="@+id/isw_help_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/isw_help_icon"
                app:layout_constraintTop_toBottomOf="@+id/isw_help_label"
                android:text="@string/isw_help_sub_text" />

            <TextView
                android:id="@+id/isw_help_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="#0D0E11"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/isw_help_icon"
                android:text="@string/isw_help" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/isw_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <Button
            android:id="@+id/isw_download_settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Download Settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="@+id/isw_guideline2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/isw_settings_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/isw_settings_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
