<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/iswWhite"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/isw_recharge_summary_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="Order Summary"
        app:layout_constraintBottom_toTopOf="@+id/isw_recharge_summary_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/isw_recharge_summary_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/isw_recharge_summary_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isw_recharge_summary_header"
        app:srcCompat="@drawable/logo_mtn" />

    <TextView
        android:id="@+id/isw_recharge_summary_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="You are about to make a transfer with the following details:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isw_recharge_summary_logo" />

    <LinearLayout
        android:id="@+id/isw_linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isw_recharge_summary_description">

        <TextView
            android:id="@+id/isw_textview28"
            style="@style/isw_summary_details_header"
            android:text="Amount" />

        <TextView
            android:id="@+id/isw_textview29"
            style="@style/isw_summary_details"
            android:text="NGN 11,000" />

        <TextView
            android:id="@+id/isw_textview30"
            style="@style/isw_summary_details_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/isw_textview31"
            style="@style/isw_summary_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="08036394860" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/isw_recharge_summary_cancel"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/iswTextColorError"
            android:textColor="@color/iswWhite"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"
            android:text="@string/isw_action_cancel"
            app:rippleColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/isw_recharge_summary_continue"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/isw_proceed"
            app:rippleColor="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>